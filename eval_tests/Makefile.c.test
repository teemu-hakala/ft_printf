NAME = $(OUTPUT_PATHS)

FILES = main0

CTEST_SUFFIX = .c.test
OUTPUT_SUFFIX = .out
OBJECT_SUFFIX = .o
HEADER_SUFFIX = .h

SOURCES = sources
OBJECTS = objects
INCLUDES = includes
LIBRARIES = libraries
PROGRAMS = programs

FOLDER_LIST = \
	$(SOURCES) \
	$(OBJECTS) \
	$(INCLUDES) \
	$(LIBRARIES) \
	$(PROGRAMS)

H_FILES = eval_tests

CTEST_PATHS = $(addsuffix $(CTEST_SUFFIX), $(addprefix $(SOURCES)/, $(FILES)))
H_PATHS = $(addsuffix $(HEADER_SUFFIX), $(addprefix $(INCLUDES)/, $(H_FILES)))
INCLUSIONS = $(foreach header, $(H_PATHS), -I $(header))
OBJECT_PATHS = $(addsuffix $(OBJECT_SUFFIX), $(addprefix $(OBJECTS)/, $(FILES)))
OUTPUT_PATHS = $(addsuffix $(OUTPUT_SUFFIX), $(addprefix $(PROGRAMS)/, $(FILES)))

CC = clang
CFLAGS = -Wall -Wextra -Werror
CFLAGS += -g -Wconversion

.PHONY all
all: $(NAME)

$(NAME): pre_requisites $(OBJECT_PATHS) Makefile
	touch pre_requisites
	$(CC) $(CFLAGS) -o $@ $(OBJECT_PATHS)

$(OBJECT_PATHS): $(OBJECTS)/%.o:$(SOURCES)/%.c $(H_PATHS) Makefile
	$(CC) $(CFLAGS) $(H_PATHS) $(INCLUSIONS) -c $< -o $@


pre_requisites: $(FOLDER_LIST) $(H_PATHS) $(C_PATHS)

$(FOLDER_LIST):
	mkdir -p $@

$(H_PATHS):
	touch $@

$(C_PATHS):
	touch $@



.PHONY clean
clean:
#	/bin/rm -f $(OBJECT_PATHS)

.PHONY fclean
fclean: clean
#	/bin/rm -f $(NAME)

.PHONY re
re: fclean all
